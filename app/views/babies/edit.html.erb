<% provide(:title, "Edit user") %>
<div class="center jumbotron" style="box-shadow: 8px 8px 10px #F0F; border: 5px solid #000; background-color: rgba(255,192,203,0.8)">
  <h1>Update your profile</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @baby, local: true) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :date_price %>
        <%= f.text_field :date_price, class: 'form-control', placeholder: '$' %>

        <%= f.label :text_price %>
        <%= f.text_field :text_price, class: 'form-control', placeholder: '$' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>

      <div class="gravatar_edit">
        <%= gravatar_for @baby %>
        <a href="https://gravatar.com/emails" target="_blank">change</a>
      </div>
    </div>
  </div>
</div>
